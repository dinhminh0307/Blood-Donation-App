<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">

            <!-- Logo and Title -->

            <!-- Notification Icon -->

            <TextView
                android:id="@+id/title"
                android:layout_width="369dp"
                android:layout_height="89dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="9dp"
                android:drawableStart="@drawable/logo_blood_drop"
                android:drawablePadding="8dp"
                android:text="Blood Bestow"
                android:textColor="#800000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notification"
                android:contentDescription="Notification"
                android:layout_marginEnd="8dp"
                android:tint="#800000" />
        </RelativeLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:contentDescription="Location Icon"
                android:src="@drawable/ic_location"
                 />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ariyankuppam"
                android:textColor="#800000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Banner Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F8ECEC"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“The measure of life is not \nits DURATION but its DONATION”"
                android:textColor="#800000"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Eligibility Status -->

        <!-- Nearby Donation Sites -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/donation_site_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_pin"
                android:contentDescription="Nearby Donation Sites Icon" />

            <TextView
                android:id="@+id/nearby_donation_sites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Nearby Donation Sites"
                android:textColor="#800000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Campaigns -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/campaigns_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_campaign"
                    android:contentDescription="Campaigns Icon" />

                <TextView
                    android:id="@+id/campaigns_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="CAMPAIGNS"
                    android:textColor="#800000"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Donate -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/donate_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_donate"
                    android:contentDescription="Donate Icon" />

                <TextView
                    android:id="@+id/donate_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="DONATE"
                    android:textColor="#800000"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Find Donation Site -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/find_donation_site_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_find_donor"
                    android:contentDescription="Find Donation Site Icon" />

                <TextView
                    android:id="@+id/find_donation_site_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="FIND SITE"
                    android:textColor="#800000"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:src="@drawable/ic_home"
                android:tint="#800000" />

            <ImageView
                android:id="@+id/nav_find_donor"
                android:layout_width="39dp"
                android:layout_height="20dp"
                android:layout_marginStart="32dp"
                android:contentDescription="Find Donor Icon"
                android:src="@drawable/ic_find_donor" />

            <ImageView
                android:id="@+id/nav_request"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:contentDescription="Request Icon"
                android:src="@drawable/ic_request" />

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:contentDescription="Profile Icon"
                android:src="@drawable/ic_profile" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
