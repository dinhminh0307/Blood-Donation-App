<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <!-- Skip Now Button -->
    <TextView
        android:id="@+id/skip_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Skip now â†’"
        android:textColor="#9E9E9E"
        android:textSize="14sp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_blood_drop"
        android:contentDescription="Blood Bestow Logo" />

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="BLOOD\nBESTOW"
        android:textColor="#800000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/app_name"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Login"
        android:textColor="#800000"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/white"
        app:strokeColor="#800000"
        app:strokeWidth="2dp"
        app:cornerRadius="8dp" />


    <!-- Create Account Button -->
    <Button
        android:id="@+id/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#800000"
        android:text="Create Account"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif" />

    <!-- Bottom Wave Background -->
    <View
        android:id="@+id/wave_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wave_background" />

</RelativeLayout>
