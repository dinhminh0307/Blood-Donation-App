<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFF7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Filters"
            android:textColor="#F44336"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Location-Based Filters -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location-Based Filters"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/check_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Current Location (GPS)"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/location_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City/Region/Zip Code"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/distance_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/distance_options" />

        <!-- Date and Time Availability -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time Availability"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date (YYYY-MM-DD)"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="8dp"
            android:inputType="date" />

        <Spinner
            android:id="@+id/time_slot_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:entries="@array/time_slots"
            android:layout_marginBottom="16dp" />

        <!-- Open Now -->
        <CheckBox
            android:id="@+id/check_open_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Now"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Donation Site Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Donation Site"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/donation_site_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:entries="@array/donation_sites"
            android:layout_marginBottom="16dp" />

        <!-- Donation Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Type"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/donation_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:entries="@array/donation_types"
            android:layout_marginBottom="16dp" />

        <!-- Apply Filters Button -->
        <Button
            android:id="@+id/apply_filters_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#F44336"
            android:text="Apply Filters"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
